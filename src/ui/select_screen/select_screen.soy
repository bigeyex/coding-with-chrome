  {/call}

  <div class="{$prefix}content">
    {call .leftpane}
      {param prefix: $prefix /}
      {param opt_active: 'blocks' /}
      {param opt_colapse: true /}
    {/call}

    <div class="{$prefix}content-pane" id="{$prefix}overview-right">

      {call .subheader}
        {param prefix: $prefix /}
        {param title: 'Drawing' /}
        {param text: 'Create artworks of colour and sound' /}
        {param link: 'cwc-blockly' /}
        {param opt_class: 'subheader-green' /}
        {param opt_button_class: 'palette' /}
      {/call}

      {call .subheader}
        {param prefix: $prefix /}
        {param title: 'LEGO® MINDSTORMS® EV3 robot' /}
        {param text: 'Control a virtual or a LEGO® MINDSTORMS® EV3 robot' /}
        {param link: 'ev3' /}
        {param opt_class: 'subheader-orange' /}
        {param opt_button_class: 'adb' /}
      {/call}

      {call .subheader}
        {param prefix: $prefix /}
        {param title: 'Sphero robot' /}
        {param text: 'Control a Sphero ball' /}
        {param link: 'sphero' /}
        {param opt_class: 'subheader-blue' /}
        {param opt_button_class: 'adjust' /}
      {/call}

      {call .subheader}
        {param prefix: $prefix /}
        {param title: 'mBot robot' /}
        {param text: 'Control a mBot robot' /}
        {param link: 'mbot' /}
        {param opt_class: 'subheader-blue' /}
        {param opt_button_class: 'adjust' /}
      {/call}

      {call .homeSubLink}
        {param prefix: $prefix /}
      {/call}
    </div>

  </div>
{/template}


