{namespace cwc.soy.Debug autoescape="strict"}

/**
 * Debug template.
 */
{template .template}
  {@param prefix: string}
  {@param file_types: ?}
  {@param mode_types: ?}
  {@param message_types: ?}
  <div id="{$prefix}body">
    <h2>Debug screen</h2>

    <div class="icon_24px icon_button" id="{$prefix}close">close</div>

    <h3>File Types</h3>
    <select id="file_types">
    {foreach $file_type in keys($file_types)}
      <option value="{$file_type}">{$file_type}</option>
    {/foreach}
    </select>

    <h3>Mode Types</h3>
    <select id="mode_types">
    {foreach $mode_type in keys($mode_types)}
      <option value="{$mode_type}">{$mode_type}</option>
    {/foreach}
    </select>

    <h3>Message Types</h3>
    <select id="message_types">
    {foreach $message_type in keys($message_types)}
      <option value="{$message_type}">{$message_type}</option>
    {/foreach}
    </select>

    <div id="{$prefix}footer">
      Note: Not all features are implemented yet!
    </div>

  </div>
{/template}


/**
 * Style definitions.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}body {lb}
    position: relative;
    border: 1px solid red;
    padding: 10px;
    background: #ccc;
    width: 200px;
  {rb}

  #{$prefix}body h2{lb}
    margin: 0;
  {rb}

  #{$prefix}close {lb}
    position: absolute;
    right: 5px;
    top: 5px;
  {rb}

  #{$prefix}left {lb}
    width: 300px;
    float: left;
  {rb}

  #{$prefix}right {lb}
    width: 300px;
    float: right;
  {rb}

  #{$prefix}footer {lb}
    clear: both;
    margin-top: 10px;
  {rb}
{/template}
