{namespace cwc.soy.Preview autoescape="deprecated-contextual"}

/**
 * HTML template for the preview.
 */
{template .previewTemplate}
  {@param prefix: string}
  <div id="{$prefix}body">
    <header id="{$prefix}toolbar" class="mdl-layout__header bg_10_pct_black"></header>
    <div id="{$prefix}content"></div>
    <footer id="{$prefix}infobar" class="mdl-layout__header"></footer>
  </div>
{/template}

/**
 * Preview style definitions.
 */
{template .previewStyle}
  {@param prefix: string}
  #{$prefix}toolbar > .goog-toolbar {lb}
    padding-left: 10px;
  {rb}

  #{$prefix}content {lb}
    position: relative;
    background: #fff;
    width: 100%;
    height: 100%;
    -webkit-box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
    -moz-box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
  {rb}

  #{$prefix}content.hide {lb}
    display: none;
    width: 1px;
    height: 1px;
  {rb}

  #{$prefix}content.show {lb}
    display: block;
    width: 100%;
    height: 100%;
  {rb}

  #{$prefix}content webview {lb}
    width: 100%;
    height: 100%;
  {rb}

  #{$prefix}infobar {lb}
    height: 26px;
    min-height: 26px;
  {rb}

{/template}
