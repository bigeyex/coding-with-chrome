{namespace cwc.soy.mode.sphero.Monitor autoescape="strict"}


/**
 * Intro template.
 */
{template .intro}
  {@param prefix: string}
  <div id="{$prefix}intro">
    These screens allow you to control, monitor and calibrate the
    Sphero ball.<br>
    <br>
    Please calibrate your Sphero in the calibration screen before you
    execute any programm.<br>
  </div>
{/template}


/**
 * Calibration template.
 */
{template .calibration}
  {@param prefix: string}
  <div id="{$prefix}calibration">
    Sphero Callibration Screen<hr>
    <div id="{$prefix}calibration-buttons"></div>
  </div>
  <p>
    Press the -2, -1, +1 and +2 button until the tailing light shows in your
    direction.<br>
    To end the calibration and to store the new "0" point, press the 0 button.
  </p>
{/template}


/**
 * Calibration template.
 */
{template .control}
  {@param prefix: string}
  <div id="{$prefix}control">
    Sphero Control Screen<hr>
    <div id="{$prefix}control-buttons"></div>
    <div id="{$prefix}system-buttons"></div>
  </div>
{/template}


/**
 * Style definitions.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}intro,
  #{$prefix}control,
  #{$prefix}calibration {lb}
    padding: 5px;
    position: relative;
  {rb}

  #{$prefix}control-buttons {lb}
    width: 150px;
    margin: auto;
    padding-bottom: 10px;
  {rb}

  #{$prefix}calibration-buttons {lb}
    width: 200px;
    margin: auto;
    padding-bottom: 10px;
  {rb}

  #{$prefix}control-buttons:first-child {lb}
    padding-left: 3px;
  {rb}

  #{$prefix}system-buttons > div {lb}
    padding: 10px;
  {rb}

{/template}
